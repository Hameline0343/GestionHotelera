{% extends "base.njk" %}

{% block titulo %}Limpieza | Nueva{% endblock %}

{% block contenido %}
    <h1>Limpiezas de habitaci√≥n {{ numeroHabitacion }}</h1>

    <form action="/limpiezas/{{ idHabitacion }}" method="post">
        <div class="form-group">
            <label for="fechaHora">Fecha de limpieza:</label>
            <input type="date" class="form-control" name="fechaHora" 
                placeholder="Fecha de limpieza...">
        </div>
        <div class="form-group row">
            <label for="observaciones">Observaciones:</label>
            <br>
            <textarea class="col-12 mx-2 my-1" name="observaciones" placeholder="Observaciones..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
{% endblock %}